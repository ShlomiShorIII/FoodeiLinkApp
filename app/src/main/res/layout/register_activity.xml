<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewRegisterAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/tertiary_color"
    tools:context=".RegisterActivity">

    <!-- Main layout container -->
    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">


        <LinearLayout
            android:id="@+id/titleLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primary_color"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvTitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Account"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/secondary_color"
                android:gravity="start"
                android:layout_marginStart="8dp" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:src="@drawable/logo3" />
        </LinearLayout>

        <!-- Background image with friends -->
        <ImageView
            android:id="@+id/friends"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/friends" />

        <!-- Card for entering personal details -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewRegister1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/tertiary_color"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:src="@drawable/upload2"
                    android:contentDescription="Profile Image"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Upload your profile photo"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="User Name"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtUserName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter your user name"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:alpha="0.7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="E-Mail"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtEmailAddressLog2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter your email"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:alpha="0.7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:text="Password"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter your password"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:alpha="0.7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <!-- Location selection button -->
                <Button
                    android:id="@+id/btnSelectLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select your location"
                    android:drawableRight="@drawable/location_icon"
                    android:drawablePadding="2dp"
                    android:textSize="16sp"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card for setting user preferences -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewRegister2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/tertiary_color"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Set up your profile preferences"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_cooking_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/secondary_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <Spinner
                    android:id="@+id/spinner_dietary_preferences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/secondary_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <Spinner
                    android:id="@+id/spinner_why_here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@color/secondary_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@color/primary_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <EditText
                    android:id="@+id/edtAge2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter your age"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:alpha="0.7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <EditText
                    android:id="@+id/edtAboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/secondary_color"
                    android:hint="Share something about you ...."
                    android:textSize="16sp"
                    android:textColor="@color/primary_color"
                    android:textColorHint="@color/primary_color"
                    android:padding="12dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:overScrollMode="always" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Please upload your dishes"
                    android:textStyle="bold|italic"
                    android:textColor="@color/tertiary_color" />

                <!-- Uploading dish images -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/tertiary_color">

                        <ImageView
                            android:id="@+id/imgDish1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/upload1" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/tertiary_color">

                        <ImageView
                            android:id="@+id/imgDish2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/upload1" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/tertiary_color">

                        <ImageView
                            android:id="@+id/imgDish3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/upload1" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <Button
                    android:id="@+id/btnFinish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Finish"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
